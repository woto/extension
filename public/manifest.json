{
  "manifest_version": 3,
  "name": "Extension for roastme.ru",
  "description": "A companion tool for adding data to roastme.ru",
  "version": "0.0.0.17",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "externally_connectable": {
    "matches": ["http://mentions.lvh.me/*", "http://localhost/*"]
  },

  "web_accessible_resources": [{
    "resources": [ "logo.png" ],
    "matches": ["<all_urls>"]
  }],

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "run_at": "document_start",
          "js": ["js/context_menu.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "webNavigation",
    "activeTab"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
